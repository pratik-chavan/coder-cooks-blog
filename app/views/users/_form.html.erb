<div class = "row">
  <div class = "col-xs-12">

    <%= render 'shared/errors', obj: @user %>

    <%= form_for(@user , :html => { class: "form-horizontal" , role: "form"}) do |f| %>
      
    
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :username %><br>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :username , class: "form-control", placeholder: "Enter Username", autofocus: true %>
        </div>
      </div>
      
      
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :email %><br>
        </div>
        <div class="col-sm-8">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter Email ID", autofocus: true %>
        </div>
      </div>
      
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :password %><br>
        </div>
        <div class="col-sm-8">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter Password", autofocus: true %>
        </div>
      </div>      
      
       <div class="form-group">
        <div class="col-sm-10">
            <%= f.submit "Sign Up" , class: "btn btn-primary"%>
        </div>
      </div>
    <% end %>
    
<div class="col-xs-4 col-xs-offset-4">
  [<%= link_to 'Cancel and return back to articles listing', articles_path %>]
</div>

</div>
</div>
